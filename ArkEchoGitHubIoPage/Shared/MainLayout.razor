@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<MudAppBar Color="Color.Primary" Dense="true" Fixed="false" Elevation="0">
    <MudSpacer />
    <MudIconButton OnClick="buttonGithubClicked" Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
</MudAppBar>

<MudElement Class="d-flex justify-center align-center">

    <MudElement Class="d-flex justify-start flex-grow-1" />

    <MudElement Class="d-flex justify-center">
        @Body
    </MudElement>

    <MudElement Class="d-flex justify-end flex-grow-1" />

</MudElement>

@code{
    private async Task buttonGithubClicked()
    {
        await JSRuntime.InvokeVoidAsync("open", "https://github.com/arkecho", "_blank");
    }
}